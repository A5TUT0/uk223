{
  "compilerOptions": {
    "jsx": "react-jsx", // Configuración para React con la nueva transformación JSX
    "target": "ES6", // O el nivel de ECMAScript que prefieras
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "server/**/*"],
  "exclude": ["node_modules"]
}
