# Utiliza una imagen base de Node.js
FROM node:18-alpine

# Instala dependencias del sistema necesarias
RUN apk add --no-cache curl bash

# Instala Bun usando el script oficial
RUN curl -fsSL https://bun.sh/install | bash

# Configura las variables de entorno para Bun
ENV BUN_INSTALL=/root/.bun
ENV PATH=$BUN_INSTALL/bin:$PATH

# Establece el directorio de trabajo
WORKDIR /app

# Copia los archivos de configuraci칩n
COPY package.json ./
COPY bun.lockb ./

# Instala las dependencias usando Bun
RUN bun install

# Copia el resto del c칩digo de la aplicaci칩n
COPY . .

# Exponer el puerto en el que correr치 el frontend
EXPOSE 5173

# Comando para iniciar el servidor en modo desarrollo
CMD ["bun", "run", "dev"]
